<div class="container-real">
<div class="h1">
<h1>INGRESO DE PORDUCTOS</h1>
</div>

<div class="card-1">
    <form onsubmit="return addMessages()">
        <input type="text" name="name" id="name" placeholder="Product name" />
        <input type="text" name="description" id="description" placeholder="Description"/>
        <input type="text" name="price" id="price" placeholder="Price" />
        <input type="text" name="stock" id="stock" placeholder="Stock" />
        <input type="text" name="code" id="code" placeholder="Code" />
        <input type="submit" value="ingresar" />
    </form>
    </div>
   <div class="tarjeta">
     {{#each PRODUCTS}}
     
     <div class="card text-white bg-dark mb-3 card 2" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body text-white bg-dark mb-3">
    <h5 class="card-title text-white bg-dark mb-3">{{this.name}}</h5>
    <p class="card-text text-white bg-dark mb-3">{{this.description}}</p>
  </div>
  <ul class="list-group list-group-flush card text-white bg-dark mb-3">
    <li class="list-group-item text-white bg-dark mb-3">{{this.price}}</li>
    <li class="list-group-item card text-white bg-dark mb-3">{{this.stock}}</li>
    <li class="list-group-item card text-white bg-dark mb-3">{{this.code}}</li>
  </ul>
  <div class="card-body">
    <a href="#" class="btn btn-primary">agregar al carrito</a>
    
  </div>
</div>
    {{/each}} 
</div>


    <div id="caja" class="caja"></div>
</div>
</div>

<script src="/socket.io/socket.io.js"></script>
